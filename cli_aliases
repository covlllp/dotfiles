export CLICOLOR=1
export LSCOLORS=gxfxbEaEBxxEhEhBaDaCaD
export VISUAL=vim
export EDITOR="$VISUAL"
export TERM="xterm-256color"

alias ls="ls --color=auto"

# Extra linux things
if [ "$HOST" = "localhost" ] ; then
  alias ser="cd ~/tou-usb/projects"
fi

# Extra work laptop
if [ "$HOST" = "colinvl-mbp.corp.dropbox.com" ] ; then
  alias linux_connect="source ~/Dropbox/Computer/scripts/open_linux_connection.sh"
  alias clean_linux="source ~/Dropbox/Computer/scripts/cleanup_linux_connection.sh"

  alias ser="cd ~/src/server"
  alias sshvm="ssh ec-server"
  alias sshlinux="ssh -A colinvl-linux"
  alias sshdevbox="ssh colinvl-dbx"
  alias ls="ls -G"
  alias vi=/usr/local/bin/vim
  alias vim=/usr/local/bin/vim
fi

# Extra linux box
if [ "$HOST" = "colinvl-linux" ] ; then
  alias ser="cd /mnt/repos/server"
  alias sshvm="ssh ec-server"
  alias sshdevbox="ssh colinvl-dbx"
fi

# Other common ls commands
alias ll="ls -l"
alias la="ls -a"
alias lla="ls -la"
alias lt="ls -t | head -5"

alias ..="cd .."
alias cl="clear"

alias v="vi"
alias tm="tmux -u"

# Find commands
alias f="find . | grep"
alias t="tail -f"
alias grepr="grep -R"

# Loading pureprompt
alias lpp="source ~/dotfiles/load_pure_prompt"

# Exit commands
alias q="exit"
alias :q="exit"
